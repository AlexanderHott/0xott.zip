  <main class="flex flex-col gap-4" id="main">
    <section class="flex flex-col gap-4">
      <div class="flex items-end gap-1">
        <h1 class="text-4xl font-bold">Alex Ott</h1>
        <a
          target="_blank"
          href="/rss.xml"
          aria-label="rss feed"
